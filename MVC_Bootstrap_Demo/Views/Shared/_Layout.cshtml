    <!-- Everything below Nav -->
    <div class="row mx-0 my-0">
        <!-- Side bar -->
        <nav class="col SideBar">
            <div class="sidebar-sticky">
                <ul class="nav flex-column">
                    <li class="my-1">
                        <div class="row mx-0 pt-0 py-1 py-sm-2">
                            <div class="col-sm-3 px-0 text-center align-middle">
                                <img class="sidebar-img"
                                     src="img/navigationIcons/Hamburger.png" />
                            </div>
                            <div class="col-sm-9 px-0 align-middle"></div>
                        </div>
                    </li>
                    <li class="my-1">
                        <div class="row mx-0 pt-0 py-1 py-sm-2 active">
                            <div class="col-sm-3 px-0 text-center align-middle">
                                <img class="sidebar-img"
                                     src="img/navigationIcons/SelectnPay.png" />
                            </div>
                            <div class="col-sm-9 px-0 align-middle">
                                <a class="nav-link sidebar-text px-0 py-0 text-sm-left text-center"
